<%= breadcrumbs_for_loan(@loan) %>

<div class="page-header">
  <h1>Data Correction</h1>
</div>

<%= simple_form_for(@presenter, url: loan_data_corrections_path(@loan, type: params[:type]), html: { class: 'form-horizontal form-data-correction' }) do |f| %>
  <%= render_errors_on_base(f.object.errors) %>

  <%= render params[:type], f: f %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Submit', class: 'btn-primary', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>
